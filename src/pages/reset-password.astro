---
import AuthLayout from "../layouts/AuthLayout.astro";
import { PasswordResetForm } from "../components/auth/PasswordResetForm";

// Disable prerendering for this page to enable SSR
export const prerender = false;

// Check if user is already authenticated
const { user } = Astro.locals;

if (user) {
  return Astro.redirect('/');
}
---

<AuthLayout title="Reset Password - Crypto Arbitrage Dashboard">
  <div class="space-y-6">
    <div class="text-center space-y-2">
      <h2 class="text-2xl font-bold tracking-tight">Reset your password</h2>
      <p class="text-muted-foreground">
        We'll send you a link to reset your password
      </p>
    </div>
    
    <PasswordResetForm client:load />
  </div>
</AuthLayout>
